{
  "manifest_version": 2,
  "name": "insta-d",
  "description": "adds a download link to instagram pages",
  "version": "1.0.2",
  "permissions": [
    "activeTab"
  ],
  "web_accessible_resources": [
    "images/*"
  ],
  "content_scripts": [
    {
      "matches": [
        "https://*.instagram.com/*"
      ],
      "js": ["script.js"]
    }
  ],
  "page_action": {
    "default_icon": {
      "16": "images/icon_16.png",
      "32": "images/icon_32.png",
      "64": "images/icon_64.png"
    },
    "default_title": "insta-d"
  },
  "icons" : {
    "16": "images/icon_16.png",
    "32": "images/icon_32.png",
    "64": "images/icon_64.png",
    "128": "images/icon_128.png"
  }
}
